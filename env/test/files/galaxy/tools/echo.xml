<tool id="echo" name="Echo">
    <command>
        sleep "$time" ; echo "$echo" &gt; "$output1"
    </command>
    <inputs>
        <param name="echo" type="text" title="Text to echo"/>
        <param name="time" type="text" title="Seconds to sleep"/>
    </inputs>
    <outputs>
        <data name="output1" format="txt" />
    </outputs>
</tool>

